
<div class="row" style="margin-top:50px;position:relative;">
    
    <% @restaurants.each do |restaurant| %>
    <div class="border-shadow col-md-3" style="height:103px;margin-top:20px; "></div>
        <%= link_to restaurant_path(restaurant) do %>
            <li class="list-item col-md-6" style="    position:relative;margin:10px auto; text-align:left;">
                 <h3 style="display:inline-block;margin-left:10px;"><%= restaurant.name %></h3>
                 <p  style="display:inline-block;vertical-align:middle;margin-left:10px;text-align:left;"><%= restaurant.comment %></p>
            </li>
         <% end %>
    <div class="border-shadow col-md-3" style="height:103px; margin-top:20px;"></div><br>
    
    <% end %>
</div>


<style>
    a {
    color: black;
    text-decoration: none;
}
 a:hover {
    color: gray;
    text-decoration: none;
}
</style>