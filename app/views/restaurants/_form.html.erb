
 <%= simple_form_for @restaurant do |f| %>
    <%= f.input :name, placeholder: "Restaurant Name", label: "Restaurant Name" %>
    <%= f.input :adresse, placeholder: "Adresse", label: "Adresse" %>
    <%= f.input :comment, placeholder: "Comment", label: "Comment" %>
    <%= f.input :link, placeholder: "restaurant website", label: "restaurant website" %>  
    <%= f.input :carte_restaurant, as: :boolean, label: "carte tiket restaurant", style: "display:inline-block;margin-left:5px;width:50px;" %> 
     <%= f.input :fat, label: "fat" , style: "display:inline-block;margin-left:5px;width:50px;"%>  
      <%= f.input :healthy, label: "healthy" , style: "display:inline-block;margin-left:5px;width:50px;"%>  
    <%= f.input :vegetarian, label: "VG" , style: "display:inline-block;margin-left:5px;width:50px;"%>  
 <%= f.input :vegan, label: "vegan", style: "display:inline-block;margin-left:5px;width:50px;" %> 
    <%= f.input :halal, label: "halal", style: "display:inline-block;margin-left:5px;width:50px;" %> 
    <%= f.input :casher, label: "casher", style: "display:inline-block;margin-left:5px;width:50px;" %> 
    <%= f.button :submit, "ADD", class: "btn teal  btn-block waves-effect waves-light ", style: "border:none;" %>
 <% end %>
 
 <style>
  [type="checkbox"]:not(:checked), [type="checkbox"]:checked{
    position: relative!important; 
    left: -5px !important; 
    opacity: 1!important; 
  }
  .restaurant_fat, .restaurant_healthy, .restaurant_carte_restaurant, .restaurant_vegetarian,.restaurant_vegan, .restaurant_halal, .restaurant_casher{
       width: 100px;
    display: inline-block;
  }

 </style>