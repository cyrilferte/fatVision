<div style="width:80%;text-align:center;margin:100px auto;color:white;">
<div style="font-size:35px;color:white;"> <%= @restaurant.name %></div>
<br><br><br><br>
    <div class="row">
        <div class="col s12 m6">
            <div class="card-panel " style="min-height:450px;position:relative;">
              <span class=" grey-text darken-4" ><%= @restaurant.comment %>
              </span><br><br><br>
              <% if @restaurant.link %>
              <a style="position:absolute;bottom:0px;left:0;right:0;" class="waves-effect waves-light btn" href="<%= @restaurant.link %>">Website</a>
              <% end %>
            </div>
        </div>
        <div class="col s12 m6">
          <iframe frameborder="0" style="border:0;height:450px; width:100%; max-height:50vh;" src="https://www.google.com/maps/embed/v1/place?q=<%= @adresse %>&key=AIzaSyABZi5fUhkUl-txIh1rGe1ht0BXUWQINUM" allowfullscreen></iframe>
        </div>
    </div>


</div>


